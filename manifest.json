{
  "manifest_version": 3,
  "name": "Tab Zen",
  "version": "1.0",
  "default_locale": "en",
  "description": "A lightweight, powerful Chrome extension designed to help you manage and declustter your browser tabs efficiently.",
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "assets/icon_128x128.png"
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "assets/icon_16x16.png",
    "48": "assets/icon_48x48.png",
    "128": "assets/icon_128x128.png"
  },
  "host_permissions": ["<all_urls>"],
  "commands": {
    "toggle-feature": {
      "suggested_key": {
        "default": "Ctrl+Shift+T"
      },
      "description": "Toggle tab management feature"
    }
  }
}

